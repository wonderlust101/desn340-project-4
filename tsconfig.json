{
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@types/*": [
        "types/*"
      ]
    },
    "outDir": "./dist",
    "moduleResolution": "node",
    "target": "es2016",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "types/*",
    "vite.config.ts"
  ]
}